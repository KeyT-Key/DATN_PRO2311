<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>product-inforamtion</title>
    <link rel="stylesheet" href="/Product_information.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="nav-links">
            <a href="/signup" class="signup" id="signup">Đăng Ký</a>
            <div class="khoanggiua" id="khoanggiua"></div>
            <a href="/login" class="signup" id="login">Đăng nhập</a>
            <a href="/user_information" class="signup" id="user-information">User information</a>
        </div>
        <div class="nav-container">
            <div class="logo">
                <a href="/">
                    <img src="/Images/Logo.jpg" alt="">
                </a>
            </div>
            <div class="search-cart">
                <div class="search-bar">
                    <input type="text" placeholder="Tìm kiếm...">
                <button type="submit">Tìm kiếm</button>
                </div>
                <div class="nav-cart">
                    <a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
            </div>
        </div>
    </header>
    <!-- Product_information -->
    <div class="wrapper">
        <div class="product-details">
            <!-- Product Grid -->
            <div class="grid-2">
                <!-- Left Column - Images -->
                <div class="img-section">
                    <div class="main-img">
                        <img src="" alt="Product" id="mainImage">
                    </div>
                    <div class="thumbs">
                        <div class="thumb">
                            <img src="" alt="Thumbnail 1">
                        </div>
                        <div class="thumb">
                            <img src="" alt="Thumbnail 2">
                        </div>
                        <div class="thumb">
                            <img src="" alt="Thumbnail 3">
                        </div>
                        <div class="thumb">
                            <img src="" alt="Thumbnail 4">
                        </div>
                        <div class="thumb">
                            <img src="" alt="Thumbnail 5">
                        </div>
                    </div>
                </div>
    
                <!-- Right Column - Product Details -->
                <div class="details-section">
                    <div>
                        <h1 class="product-name" id="product-name"></h1>
                        <div class="rating">
                            <div class="rating-value">
                                <span class="rating-number">4.7</span>
                                <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </div>
                            </div>
                            <p class="reviews">Còn <span  id="products_number"></span> sản phẩm</p>
                        </div>
                    </div>
                    <!-- Variants -->
                    <div class="variants">
                        <div>
                            <h3 class="variant-label">Loại</h3>
                            <div class="variant-options">
                                <button class="variant-btn">
                                    Play boy kẻ đen
                                </button>
                                <button class="variant-btn">
                                    Play boy kẻ nâu
                                </button>
                                <button class="variant-btn">
                                    Play boy trơn đen
                                </button>
                            </div>
                        </div>
                    </div>
    
                    <!-- Quantity -->
                    <div class="quantity">
                        <h3 class="quantity-label">Số Lượng</h3>
                        <div class="quantity-controls">
                            <button class="qty-btn" id="decreaseBtn" aria-label="Giảm số lượng">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" value="1" min="1" class="qty-input" id="quantityInput" aria-label="Số lượng">
                            <button class="qty-btn" id="increaseBtn" aria-label="Tăng số lượng">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <p class="price" id="product-price"></p>
                    </div>
    
                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <button class="add-to-cart">
                            <i class="fas fa-cart-plus mr-2"></i>
                            Thêm Vào Giỏ Hàng
                        </button>
                        <button class="buy-now">
                            Mua Ngay
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
     <!-- Footer -->
     <footer class="footer">
        <div class="footer-content">
            <div class="footer-logo" style="color: white;">Fake</div>
        </div>
        <p class="footer-text">&copy; 2025 Fake. All Rights Reserved.</p>
    </footer>
</body>
<script src="/Product_information.js"></script>
</html>